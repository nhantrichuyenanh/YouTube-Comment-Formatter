{
    "manifest_version": 3,
    "name": "YouTube Comment Formatter",
    "version": "1.0.4",
    "author": "Nhân Trí",
    "description": "Makes life easier by implementing buttons and hotkeys to format your YouTube comments and replies.",
    "homepage_url": "https://github.com/nhantrichuyenanh/YouTube-Comment-Formatter",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
    "https://www.youtube.com/watch?*",
    "https://www.youtube.com/shorts/*",
    "https://www.youtube.com/channel/*/community?*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{686bfcbd-7def-41c3-9481-d720eb02efae}",
            "strict_min_version": "109.0"
        }
    }
}
